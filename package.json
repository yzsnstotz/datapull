{
  "name": "datapull",
  "version": "1.0.0",
  "description": "A service for crawling websites and ingesting content into DriveQuiz RAG database",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "crawl": "tsx scripts/crawl-and-ingest.ts",
    "validate": "tsx scripts/validate-config.ts",
    "validate-config": "tsx scripts/validate-config.ts",
    "test:upload": "tsx scripts/test-upload.ts",
    "gui:dev": "cd gui && vite",
    "gui:build": "cd gui && vite build",
    "api:dev": "tsx watch src/api/index.ts",
    "api:start": "node dist/api/index.js",
    "gui:start": "npm run gui:build && npm run api:start"
  },
  "keywords": [
    "crawler",
    "rag",
    "data-ingestion",
    "web-scraping"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/basic-auth": "^6.2.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.3.0",
    "@fastify/websocket": "^11.2.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "fastify": "^5.6.1",
    "iconv-lite": "^0.6.3",
    "p-queue": "^8.0.1",
    "pdf-parse": "^1.1.1",
    "robots-parser": "^3.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pdf-parse": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.7",
    "axios": "^1.6.2",
    "eslint": "^8.56.0",
    "pinia": "^3.0.4",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "vitest": "^1.1.0",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
